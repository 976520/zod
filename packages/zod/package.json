{
  "name": "zod",
  "version": "3.25.0-beta.20250514T010249",
  "author": "Colin McDonnell <zod@colinhacks.com>",
  "description": "TypeScript-first schema declaration and validation library with static type inference",
  "files": ["src", "dist"],
  "funding": "https://github.com/sponsors/colinhacks",
  "homepage": "https://zod.dev",
  "keywords": ["typescript", "schema", "validation", "type", "inference"],
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "source": "./src/index.ts",
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "source": "./src/index.ts",
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    },
    "./v3": {
      "import": {
        "source": "./src/v3/index.ts",
        "types": "./dist/esm/v3/index.d.ts",
        "default": "./dist/esm/v3/index.js"
      },
      "require": {
        "source": "./src/v3/index.ts",
        "types": "./dist/commonjs/v3/index.d.ts",
        "default": "./dist/commonjs/v3/index.js"
      }
    },
    "./v4": {
      "import": {
        "source": "./src/v4/index.ts",
        "types": "./dist/esm/v4/index.d.ts",
        "default": "./dist/esm/v4/index.js"
      },
      "require": {
        "source": "./src/v4/index.ts",
        "types": "./dist/commonjs/v4/index.d.ts",
        "default": "./dist/commonjs/v4/index.js"
      }
    },
    "./v4-mini": {
      "import": {
        "source": "./src/v4/mini/index.ts",
        "types": "./dist/esm/v4/mini/index.d.ts",
        "default": "./dist/esm/v4/mini/index.js"
      },
      "require": {
        "source": "./src/v4/mini/index.ts",
        "types": "./dist/commonjs/v4/mini/index.d.ts",
        "default": "./dist/commonjs/v4/mini/index.js"
      }
    },
    "./v4/core": {
      "import": {
        "source": "./src/v4/core/index.ts",
        "types": "./dist/esm/v4/core/index.d.ts",
        "default": "./dist/esm/v4/core/index.js"
      },
      "require": {
        "source": "./src/v4/core/index.ts",
        "types": "./dist/commonjs/v4/core/index.d.ts",
        "default": "./dist/commonjs/v4/core/index.js"
      }
    },
    "./v4/locales/*": {
      "import": {
        "source": "./src/v4/locales/*",
        "types": "./dist/esm/v4/locales/*",
        "default": "./dist/esm/v4/locales/*"
      },
      "require": {
        "source": "./src/v4/locales/*",
        "types": "./dist/commonjs/v4/locales/*",
        "default": "./dist/commonjs/v4/locales/*"
      }
    }
  },
  "tshy": {
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts",
      "./v3": "./src/v3/index.ts",
      "./v4": "./src/v4/index.ts",
      "./v4-mini": "./src/v4/mini/index.ts",
      "./v4/core": "./src/v4/core/index.ts",
      "./v4/locales/*": "./src/v4/locales/*"
    },
    "sourceDialects": ["@zod/source"],
    "exclude": ["./src/**/*.test.ts"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colinhacks/zod.git"
  },
  "bugs": {
    "url": "https://github.com/colinhacks/zod/issues"
  },
  "support": {
    "backing": {
      "npm-funding": true
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tshy",
    "postbuild": "pnpm biome check --write .",
    "test:watch": "pnpm vitest",
    "test": "pnpm vitest run",
    "prepublishOnly": "pnpm test && pnpm run build",
    "bump:beta": "pnpm version minor && pnpm version \"v$(pnpm pkg get version | jq -r)-beta.$(date +%Y%m%dT%H%M%S)\"",
    "pub:beta": "pnpm bump:beta && pnpm publish --dry-run --tag next --publish-branch v4 --no-git-checks"
  },
  "main": "./dist/commonjs/index.js",
  "types": "./dist/commonjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "type": "module"
}
